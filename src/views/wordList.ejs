<%- include("./partials/head") %>

<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include("./partials/headerLado") %>

      <!-- Layout container -->
      <div class="layout-page">
        <!-- Navbar -->
        <%- include("./partials/headerCima") %>
        <!-- / Navbar -->

        <!-- Content wrapper -->
        <div class="content-wrapper">
          <!-- Content -->
          <div class="container-xxl flex-grow-1 container-p-y">
            <div class="col-xxl-4 col-md-6">
              <div class="card h-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                  <h5 class="card-title m-0 me-2">Word List</h5>
                  <div class="dropdown">
                    <button
                      class="btn text-muted p-0"
                      type="button"
                      id="transactionID"
                      data-bs-toggle="dropdown"
                      aria-haspopup="true"
                      aria-expanded="false">
                      <i class="ri-more-2-line ri-24px"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="transactionID">
                      <a class="dropdown-item" href="javascript:void(0);">Last 28 Days</a>
                      <a class="dropdown-item" href="javascript:void(0);">Last Month</a>
                      <a class="dropdown-item" href="javascript:void(0);">Last Year</a>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <ul class="p-0 m-0">
                    <% cards.forEach(card => { %>
                    <li class="d-flex mb-4 pb-1">
                      <div class="me-4">
                        <div class="avatar flex-shrink-0">
                          <div class="avatar-initial bg-label-danger rounded">
                            <img src="<%= card.imageUrl %>" alt="<%= card.word %>" class="img-fluid" style="max-width: 50px; max-height: 50px; object-fit: cover;" />
                          </div>
                        </div>
                      </div>
                      <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                          <h6 class="mb-1"><%= card.word %></h6>
                          <p class="mb-0"><%= card.translation %></p>
                        </div>
                        <div class="user-progress d-flex align-items-center gap-3">
                          <form action="/deleteWord/<%= card.id %>" method="POST">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                          </form>
                        </div>
                      </div>
                    </li>
                    <% }) %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <!-- / Content -->

          <div class="content-backdrop fade"></div>
        </div>
        <!-- Content wrapper -->
      </div>
      <!-- / Layout page -->
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>

    <!-- Drag Target Area To SlideIn Menu On Small Screens -->
    <div class="drag-target"></div>
  </div>
  <!-- / Layout wrapper -->

  <%- include("./partials/linkFooter") %>
</body>
</html>
