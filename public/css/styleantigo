/* Animação pop-in para dar efeito ao título */
@keyframes pop-in {
    0% {
        transform: scale(0.5);       /* Inicia com o título reduzido e transparente */
        opacity: 0;
    }
    100% {
        transform: scale(1);         /* Termina com o título em tamanho normal e opaco */
        opacity: 1;
    }
}

